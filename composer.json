{
  "name": "placetopay/prestashop-gateway",
  "description": "Plugin for integration PlacetoPay gateway with PrestaShop CMS",
  "type": "plugin",
  "require": {
    "php": ">=5.6.0",
    "ext-curl": "*",
    "ext-soap": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "~5.3",
    "dnetix/redirection": "^0.4"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "PlacetoPay",
      "email": "desarrollo@placetopay.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "files": [
      "helpers.php"
    ],
    "psr-4": {
      "PlacetoPay\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.2"
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR2 src/ autoload.php helpers.php index.php process.php redirect.php sonda.php",
    "security-checker": "$(which security-checker) security:check composer.lock || exit 0",
    "test": [
      "@phpcs",
      "@security-checker"
    ]
  }
}